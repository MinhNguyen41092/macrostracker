<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<h3 class="text-center">Edit your account</h3>
				<%= devise_error_messages! %>
				
				<div class="form-group">
					<%= f.label :username %><br />
					<%= f.text_field :username, autofocus: true, class: 'form-control input-xl text-center', placeholder: "Username" %>
				</div>
				
				<div class="form-group">
					<%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
					<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %><br />
					<%= f.password_field :password, autocomplete: "off", class: 'form-control input-xl text-center', placeholder: "Password" %>
				</div>
				
				<div class="form-group">
					<%= f.label :password_confirmation %><br />
					<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-xl text-center', placeholder: "Password" %>
				</div>

				<div class="form-group">
					<%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
					<%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-xl text-center', placeholder: "Password" %>
				</div>

  			<%= f.submit "Update account", class: "btn btn-default btn-block btn-xl" %>
			<% end %>

			<h3>Cancel my account</h3>

			<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

			<%= link_to "Back", :back %>
		</div>
	</div>
</div>
