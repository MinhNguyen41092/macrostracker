<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<h3 class="text-center">Welcome back</h2>
				<div class="form-group">
					<%= f.label :email %><br />
					<%= f.email_field :email, autofocus: true, class: 'form-control input-xl text-center', placeholder: "Email" %>
				</div>

				<div class="form-group">
					<%= f.label :password %><br />
					<%= f.password_field :password, autocomplete: "off", class: 'form-control input-xl text-center', placeholder: "password" %>
				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="form-group">
						<div class="checkbox">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
						</div>
					</div>
				<% end -%>

				
				<%= f.submit "Log in", class: "btn btn-default btn-block btn-xl" %>
				
			<% end %>

<%= render "devise/shared/links" %>
